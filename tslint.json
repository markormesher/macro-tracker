{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-immutable"
	],
	"jsRules": {},
	"rules": {
		// disabled rules
		"object-literal-sort-keys": false,
		"jsx-no-multiline-js": false,

		// readability
		"indent": {
			"options": [
				"tabs"
			]
		},
		"typedef": [
			true,
			"call-signature",
			"property-declaration"
		],
		"no-default-export": true,

		// immutability
		"readonly-keyword": [
			true,
			{
				"ignore-class": true,
				"ignore-local": true
			}
		]
	},
	"rulesDirectory": []
}
